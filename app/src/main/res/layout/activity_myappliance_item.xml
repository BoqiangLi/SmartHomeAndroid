<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/activity_myappliance_item_appliance_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/quick_option_voice_nor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" 设  备 :"/>
            <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="是否可控:"/>

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:id="@+id/activity_myappliance_item_appliance_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="设备名"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/activity_myappliance_item_appliance_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="否"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
